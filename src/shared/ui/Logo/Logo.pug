mixin Logo(props)
	//- # ПОДКЛЮЧЕНИЕ ДЛЯ ПРОВЕРОК DATA, OPT, ELEM # -//
	include ../../../shared/helpers/pug/shortcut-check-store

	//- # ПОЛУЧЕНИЕ CSS КЛАССОВ КОМПОНЕНТА # -//
	include Logo.cn.pug
	- const styles = classes(props && props.cn);

	//- # ВЕРСТКА КОМПОНЕНТА # -//
	a(class=styles.block href="/" aria-label="Логотип сайта" tabindex="0" title="Логотип")&attributes(attributes.Link || attributes)
		+IncludeSVG(DATA('svgName'))&attributes(attributes.Logo)
